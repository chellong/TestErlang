-module(test_4).

%% ====================================================================
%% API functions
%% ====================================================================
-export([
		sort_list_up/1,
		
		]).

%% ====================================================================
%% Internal functions
%% ====================================================================

%% 	[10,5,1,3,8,4,2]Â‰
sort_list_up(L) ->
	sort_list(L,[]).
sort_list([],Result) ->
	Result;
sort_list(L,Result) ->
	Max = get_list_max(L),
	sort_list(lists:delete(Max, L),[Max|Result]).
get_list_max([H|L]) when is_number(H) ->
	get_list_max(H,L).
get_list_max(Max,[H|L]) -> 
	if Max =< H ->
		get_list_max(H,L);
	   Max > H ->
		get_list_max(Max,L)
	end;
get_list_max(Max,[]) ->
	Max. 





























































