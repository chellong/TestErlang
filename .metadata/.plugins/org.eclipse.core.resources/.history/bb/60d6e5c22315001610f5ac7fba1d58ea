-export([sort_list_up/1,
		is_appear/2]).

%% ====================================================================
%% Internal functions
%% ====================================================================

%% 	[10,5,1,3,8,4,2]
sort_list_up(L) ->
	sort_list(L,[]).
sort_list([],Result) ->
	Result;
sort_list(L,Result) ->
	Max = get_list_max(L),
	sort_list(lists:delete(Max, L),[Max|Result]).
get_list_max([H|L]) when is_number(H) ->
	get_list_max(H,L).
get_list_max(Max,[H|L]) -> 
	if Max =< H ->
		get_list_max(H,L);
	   Max > H ->
		get_list_max(Max,L)
	end;
get_list_max(Max,[]) ->
	Max. 

%% 	[{money,200},{goods,1001,1},{money,150},{rmb,600},{goods,71143,1},
%% 	{goods,1001,1},{card,3001,281479271678954},{card,4001,281479271678955}]
%%  难度2星	5、将字符串"money:200|rmb:600|goods,71143:6|money:100|goods,71142:5"
%%  解析成 [{money,300},{rmb,600},{goods,71143,6},{goods,71142,5}]
format_tuple(String) ->
	format_tuple(string:tokens(String, "|"),Result).
format_tuple([],Result) ->
	Result;
format_tuple([H1|L1],Result) ->
	format_tuple(L1,Result ++ format_tuple(H1,{1,[],[],[]})).

	SS = format_tuple(H1,{1,[],[],[]},[]),
	format_tuple(T1,Result++SS).
format_tuple([],{_,X,Y,Z},Result) ->
	[chenge_to(X,Y,Z)|Result];
format_tuple([H|L],{Temp,X,Y,Z},Result) ->
	if ([H] =:= ":" ) or ([H] =:= ",") 	->
		   format_tuple(L,{(Temp + 1),X,Y,Z},Result);
	   true ->
			if
				Temp == 1->{Xn,Yn,Zn} = {X++[H],Y,Z};
				Temp == 2->{Xn,Yn,Zn} = {X,Y++[H],Z};
				Temp == 3->{Xn,Yn,Zn} = {X,Y,Z++[H]}
			end,		
			format_tuple(L,{Temp,Xn,Yn,Zn},Result)
	end.

chenge_to(X,[],[]) -> 
    {list_to_atom(X)};
chenge_to(X,Y,[]) -> 
    {list_to_atom(X)
      ,list_to_integer(Y)};
chenge_to(X,Y,Z) -> 
    {list_to_atom(X)
    ,list_to_integer(Y)
    ,list_to_integer(Z)}.



















